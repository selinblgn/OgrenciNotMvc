@model  OgrenciNotMvc.Models.EntityFramework.TBLOGR
@{
    ViewBag.Title = "YeniOgrenci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">
    <div style="margin-top:10px">
        <label>Öğrenci Adı</label>
        <input type="text" class="form-control" name="OGRAD" />
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Soyadı</label>
        <input type="text" class="form-control" name="OGRSOYAD" />
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Fotograf</label>
        <input type="text" class="form-control" name="OGRFOTO" />
    </div>
    <div style="margin-top:10px">
        <label>Öğrenci Kulüp</label>
       @Html.DropDownListFor(m => m.TBLKULUP.KULUPID, (List<SelectListItem>)ViewBag.dgr, new { @class="form-control"})
    </div>
    <div style="margin-top:10px">
        <label>Cinsiyet Seçimi</label>
       @Html.DropDownList("Cinsiyet",
  new[]{

           new SelectListItem(){Value="1", Text="Kadın"},
           new SelectListItem(){Value="2", Text="Erkek"}


  }, "Cinsiyet Seçiniz ", new {@class = "form-control"})
    </div>
    <div style="margin-top:10px">
        <button class="btn btn-primary">Öğrenci Ekle</button>
    </div>

</form>

